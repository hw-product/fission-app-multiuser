:ruby
  id = 'display-notification'
  content_for(:container) do
    render(
      :partial => 'layouts/panel',
      :locals => {
        :id => id,
        :heading => 'Edit Notification',
        :panel_content => render(
          :partial => 'display',
          :locals => {
            :notification => @notification
          }
        )
      }
    )
  end

= render(:partial => 'layouts/container', :locals => {:container_class => "#{id}-container", :container_id => id})
