%div{class: 'panel panel-primary'}
  %div{class: 'panel-heading'}
    Register
  %div{class: 'panel-body'}
    = form_for :user, :url => create_session_url(:internal), :method => :post do |f|
      = f.simple_fields_for :user do |user_form|
        = user_form.input :username, :label => 'Username', :required => true, :input_html => {:name => :username}
        = user_form.input :email, :label => 'Email', :required => true, :input_html => {:name => :email}
        = user_form.input :password, :as => :password, :required => true, :input_html => {:name => :password}
        = user_form.input :password_confirmation, :as => :password, :required => true, :input_html => {:name => :password_confirmation}
        %br
        = user_form.button :submit, 'Register'
